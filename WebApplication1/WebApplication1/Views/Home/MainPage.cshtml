@model WebApplication1.Models.User

<form method="post" style="background-color: #f2f2f2; padding: 20px; border-radius: 5px;">
    <label style="font-weight: bold;">Ім'я:</label>
    <input type="text" name="Name" required style="margin-bottom: 10px; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;"><br>
    <label style="font-weight: bold;">Вік:</label>
    <input type="number" name="Age" required style="margin-bottom: 10px; width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;"><br>
    <button type="submit" name="submitButton" style="background-color: #4CAF50; color: white; padding: 14px 20px; border: none; border-radius: 4px; cursor: pointer; width: 100%;">Підтвердити</button>
</form>



